<%- include("inc/head") -%>


    <div class="card">
        <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>SÃ¡lario</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% func.forEach(row=> { %>
                        <tr>
                            <td>
                                <%= row.name %>
                            </td>
                            <td>
                                <%= row.cpf %>
                            </td>
                            <td>R$ <%= row.salary %>
                            </td>
                            <td>
                                <a href="/editemployees?v=<%=row.cpf%>"><i class="fas fa-edit"></i></a>
                                <a data-toggle="modal" data-target="#modal-default"><i class="fas fa-upload"></i></a>
                            </td>

                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->


    <div class="modal fade" id="modal-default">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Default Modal</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>One fine body&hellip;</p>
                </div>
                <div class="modal-footer justify-content-between">
                    <form action="/upload" method="post" enctype="multipart/form-data">
                    <input name="avatar" type="file" class="form-control-file" id="exampleFormControlFile1">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->


    <%- include("inc/footer") -%>